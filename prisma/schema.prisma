generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Place {
  id          Int       @id @default(autoincrement())
  nombre      String    @unique
  descripcion String
  imagen      String
  imperdibles POI[]     @relation("PlaceToPOI")
  tipo        String
}

model poi {
  id          Int       @id @default(autoincrement())
  nombre      String    @unique
  descripcion String
  imagen      String
  tipo        String
  place       Place?    @relation("PlaceToPOI", fields: [placeId], references: [id])
  placeId     Int?
}